<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_margin="20dp"
    android:background="@drawable/custom_dialog_bg_white"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateDrawable="@drawable/rotate_loading_github"
            android:indeterminateDuration="1800" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_net_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_net_load_fail"
        android:visibility="gone" />

    <TextView
        android:id="@+id/id_tv_loadingmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:text="正在加载"
        android:textColor="@color/black"
        android:textSize="20.0sp" />

</LinearLayout>