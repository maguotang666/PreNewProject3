<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_todo"
    tools:context=".activity.ToDoActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            layout="@layout/comm_title" />


        <FrameLayout
            android:id="@+id/fm_content_todo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <com.example.administrator.prenewproject.view.BottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y180"
            android:background="#FFFFFF" />


    </LinearLayout>




    <RelativeLayout
        android:id="@+id/rl_newpl"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginBottom="@dimen/x200"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200">


        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_circle"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150" />

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_newpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>



</RelativeLayout>