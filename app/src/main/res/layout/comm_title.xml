<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_comm"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y240">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comm_title_color">


        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x90"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginBottom="@dimen/y30"
            android:src="@drawable/left" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x90"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginBottom="@dimen/y30"
            android:src="@drawable/back"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x260"
            android:layout_marginRight="@dimen/x170"
            android:layout_marginBottom="@dimen/y36"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="玩Android"
            android:textColor="@color/white_color"
            android:textSize="20sp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x260"
            android:layout_marginRight="@dimen/x170"
            android:layout_marginBottom="@dimen/y36"
            android:background="@null"
            android:ellipsize="end"
            android:hint="发现更多干货"
            android:singleLine="true"
            android:textColor="@color/white_color"
            android:textColorHint="#FF87B6"
            android:textSize="20sp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x90"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginBottom="@dimen/y36"
            android:src="@drawable/ic_search" />


        <ImageView
            android:id="@+id/iv_three_point"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x90"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginBottom="@dimen/y36"
            android:src="@drawable/three_point"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x90"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginBottom="@dimen/y36"
            android:src="@drawable/ic_switch"
            android:visibility="gone" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>